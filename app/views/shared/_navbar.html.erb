<div class="navbar navbar-light navbar-lewagon" style="background-color: #F25004">
  <% if user_signed_in? %>
    <%= link_to groups_path, class: "planeo-logo" do %>
      <%= image_tag asset_url("planeo.png")%>
    <% end %>
  <% else %>
    <%= link_to root_path, class: "planeo-logo" do %>
      <%= image_tag asset_url("planeo.png")%>
    <% end %>
  <% end %>



    <ul class="m-0 pr-2">
      <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= current_user.photo %>" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My Profile", "#", class: "dropdown-item" %>
          <%= link_to "My Groups", groups_path, class: "dropdown-item" %>
