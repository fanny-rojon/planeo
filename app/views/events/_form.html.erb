<%= simple_form_for [@group, @event] do |f| %>
  <div class="box-w mt-3">
    <div class="form-inputs">
        <div class="text-center mt-3 mb-3">
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
      <%= f.input :name, placeholder: "Event Name" %>
          <%= f.input :address, as: :hidden %>
      </div>
     <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-marker="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    <div>
      <h3 style="text-align: center">Choose the dates</h3>
      <div class="datebars">
      <%= f.simple_fields_for :event_dates do |p| %>
        <%= p.input :date, as: :string, label: false, required: false, input_html: {class: "datepicker"} %>
        <%= link_to 'Add date', '#', id: 'add-date-link', class: 'btn btn-outline-primary btn-small btn-block' %>
      <% end %>
      </div>
    </div>
    <div class="submit text-center">
      <%= f.button :submit, class: "custom-button padding-right-left"%>
    <% end %>
    </div>
    <div class="text-center mt-3">
      <%= link_to "Go Back", group_path(@group), class: "custom-button" %>
    </div>
  </div>
