<div class="main-container-two event-cont">
  <div class="event-image">
    <%= cl_image_tag(@event.photo)%>
    <img src="<%= @event.organizer.photo %>" class="card-event-user" />
  </div>
  <div class="infoe d-flex align-items-start w-100">
    <div class="event-map" style="width: 100%; height: 250px;">
      <div
        id="map"
        style="width: 100%; height: 250px;"
        data-marker="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
    <div class="text w-100">
      <h2><strong>Location:</strong></h2>
      <h4 class="p-0 m-0"><%= @event.address %></h4>
      <div class="primary-button text-center">22:00</div>

    </div>
  </div>
  <div class="d-flex w-100 justify-content-center">
    <div class="text-left w-50 mt-3 p-5 comment">
      <h5><%= @event.description %></h5>
    </div>
  </div>
  <div class="buttons">
    <%= link_to "Add a Comment", new_event_comment_path(@event) %>
  </div>

  <div class="buttons">
    <% if @event.organizer == current_user %>
      <%= link_to "Edit", edit_event_path(@event), class: "secondary-button" %>
      <%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure?" }, class: "secondary-button" %>
    <% end %>
  </div>
</div>

<%= link_to "#" do %>
<div class="text-center w-100 primary-button mt-2 w-100 text-white" style="position: fixed; bottom: -18px; z-index: 1234; border-radius: 0;">
  <p>IM GOING!</p>
</div>
<% end %>
