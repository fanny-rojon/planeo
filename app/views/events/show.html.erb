<%= content_for(:title, @event.name) %>
<div class="main-container-two event-cont pt-0">
  <div class="event-image w-100">
    <%= cl_image_tag(@event.photo, class: "h-100") %>
    <img src="<%= @event.organizer.photo %>" class="card-event-user" />
  </div>
  <div class="infoe d-flex align-items-start w-100">
    <div class="event-map" style="width: 100%; height: 250px;">
      <div
        id="map"
        style="width: 100%; height: 250px;"
        data-marker="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
    <div class="text w-100 h-100">
      <h2><strong>Location:</strong></h2>
      <h4 class="p-0 m-0"><%= @event.address %></h4>
      <div class="primary-button text-center">22:00</div>
    </div>
  </div>
    <% if @event.comments.present? %>
  <section class="testimonials">
          <div class="heading text-center">
            <h2><span><%= link_to "Comments", new_event_comment_path(@event) %></span> (<%= @event.comments.length %>)</h2>
          </div>
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <!-- Item-1 -->
                            <div class="carousel-item active text-center">
                                <img src="<%= @event.comments.first.user.photo %>" alt="" class="center-block team">
                                <h3><%= @event.comments.first.user.name %></h3>
                                <p><%= @event.comments.first.content %></p>
                            </div>
                            <!-- Item-2 -->
                            <% @event.comments.drop(1).each do |comment| %>
                            <div class="carousel-item text-center">
                                <img src="<%= comment.user.photo %>" alt="" class="center-block team">
                                <h3><%= comment.user.name %></h3>
                                <p><%= comment.content %></p>
                            </div>
                            <% end %>
                        </div>
                        <a
                            class="carousel-control-prev control"
                            data-target="#carouselExampleIndicators"
                            role="button"
                            data-slide="prev">
                            <span class="fa fa-angle-left icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a
                            class="carousel-control-next control"
                            data-target="#carouselExampleIndicators"
                            role="button"
                            data-slide="next">
                            <span class="fa fa-angle-right icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
      <% else %>
            <%= link_to "Be The First to Comment!", new_event_comment_path(@event), class: "pt-5 pb-0" %>
      <% end %>



  <div class="buttons">
    <% if @event.organizer == current_user %>
      <%= link_to "Edit", edit_event_path(@event), class: "secondary-button" %>
      <%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure?" }, class: "secondary-button" %>
    <% end %>
  </div>
</div>

<%= link_to "#" do %>
<div class="text-center w-100 primary-button mt-5 w-100 text-white" style="position: fixed; bottom: -18px; z-index: 1234; border-radius: 0;">
  <p>IM GOING!</p>
</div>
<% end %>

