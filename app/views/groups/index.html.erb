<% current_user.groups.each do |group| %>
<img src="<%= group.photo %>" alt="" class="temp-image">
<h2><%= link_to group.name, group_path(group.id) %> <%= link_to raw('<i class="fas fa-trash"></i>'), group_path(group.id), method: :delete, data: { confirm: "Are you sure?" } %> <%= link_to raw('<i class="fas fa-edit"></i>'), edit_group_path(group.id)%></h2>
<% group.users.each do |user| %>
<p><%= user.name %></p>
<% end %>
<% end %>
<%= link_to "Create a new group", new_group_path %>
