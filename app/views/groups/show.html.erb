<h1><%= @group.name %>'s Events</h2>
<h3>Upcoming Events</h3>
<% @organizedevents.each do |ev| %>
<div class="custom-card">
<img src="<%= ev.photo %> " alt="">
<h2><%= link_to ev.name, group_event_path(@group, ev) %></h2>
<p><%= ev.address %></p>
</div>
<br>
<% end %>
<h3 style="color: white">Proposed Events</h3>
<div class="custom-card">
<% @proposedevents.each do |ev| %>
<h2><%= link_to ev.name, group_event_path(@group, ev) %></h2>
</div>
<br>
<% end %>

<button type="button" class="btn primary-button" data-toggle="modal" data-target="#exampleModalCenter">
  Create a new event
</button>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Create a New Event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@group, @event] do |f| %>
          <%= f.input :name, placeholder: "Your event's name"%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        <%= f.button :submit, "Propose", class: "btn btn-secondary"%>
        <%= f.button :submit, "Organize", class: "btn btn-primary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
